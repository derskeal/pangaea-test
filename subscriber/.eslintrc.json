{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": [
    "standard"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "ignorePatterns": ["build/*", "node_modules/*", "bin/*"],
  "rules": {
    "operator-linebreak": "off",
    "camelcase": [
      0,
      {
        "properties": "always"
      }
    ],
    "semi": ["error", "always"],
    "eqeqeq": "error",
    "indent": [
      "warn",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "no-use-before-define": "error",
    "no-console": "warn",
    "max-len": [
      2,
      {
        "code": 120,
        "ignoreComments": true
      }
    ],
    "quotes": [
      2,
      "single"
    ],
    "strict": [
      0,
      "global"
    ],
    "no-undef": 2,
    "no-unused-vars": 2,
    "no-eq-null": 2,
    "comma-dangle": [
      "error",
      "only-multiline"
    ],
    "space-before-function-paren": [
      2,
      {
        "anonymous": "ignore",
        "named": "never"
      }
    ],
    "new-cap": "off",
    "prefer-const": "error",
    "no-multi-spaces": [
      "error"
    ],
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 1,
        "maxBOF": 1
      }
    ],
    "no-param-reassign": "warn",
    "no-useless-constructor": "error"
  }
}
